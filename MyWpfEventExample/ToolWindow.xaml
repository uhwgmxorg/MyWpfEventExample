<Window x:Class="MyWpfEventExample.ToolWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyWpfEventExample"
        mc:Ignorable="d"
        Title="ToolWindow" Height="220" Width="400">
    <Grid>
        <Button Content="Fire Event" HorizontalAlignment="Right" Margin="0,0,10,30" VerticalAlignment="Bottom" Width="45" Height="15" Click="Button_Click_FireEvent" FontSize="9"/>
        <Button Content="Close" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="44" Height="15" Click="Button_Click_Close" FontSize="9"/>
    </Grid>
</Window>
